# =============================================
# MySQL Custom Configuration (my.cnf)
# Purpose: Optimized settings for database administration lab
# =============================================

[mysqld]
# Basic Settings
port = 3306
socket = /var/run/mysqld/mysqld.sock
datadir = /var/lib/mysql
tmpdir = /tmp

# Storage Engine
default-storage-engine = InnoDB

# Character Set and Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# SQL Mode (strict mode for data integrity)
sql_mode = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION

# Memory Configuration
# Adjust based on available system memory
innodb_buffer_pool_size = 1G
innodb_buffer_pool_instances = 4
innodb_log_buffer_size = 16M

# Query cache (MySQL 5.7 and earlier)
# query_cache_type = 1
# query_cache_size = 256M
# query_cache_limit = 2M

# Sort and join buffers
sort_buffer_size = 2M
join_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 4M

# Connection Settings
max_connections = 200
max_connect_errors = 100000
connect_timeout = 10
wait_timeout = 28800
interactive_timeout = 28800

# Thread Settings
thread_cache_size = 50
thread_stack = 256K

# Table Settings
table_open_cache = 4000
table_definition_cache = 2000
open_files_limit = 65535

# InnoDB Configuration
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT
innodb_log_file_size = 256M
innodb_log_files_in_group = 2
innodb_max_dirty_pages_pct = 75
innodb_lock_wait_timeout = 50
innodb_io_capacity = 200
innodb_io_capacity_max = 400

# Binary Logging (for replication and point-in-time recovery)
log_bin = /var/log/mysql/mysql-bin.log
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 100M
binlog_cache_size = 1M
sync_binlog = 1

# Error Logging
log_error = /var/log/mysql/error.log
log_error_verbosity = 2

# General Query Log (disable in production for performance)
# general_log = 1
# general_log_file = /var/log/mysql/general.log

# Slow Query Log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1
min_examined_row_limit = 1000

# Replication Settings (if using replication)
server_id = 1
relay_log = /var/log/mysql/relay-bin.log
relay_log_index = /var/log/mysql/relay-bin.index
relay_log_info_file = /var/log/mysql/relay-log.info

# Security Settings
skip_name_resolve = 1
bind_address = 127.0.0.1

# Performance Schema
performance_schema = ON
performance_schema_max_table_instances = 400
performance_schema_max_table_handles = 4000

# MyISAM Settings (if using MyISAM tables)
key_buffer_size = 128M
myisam_sort_buffer_size = 64M
myisam_max_sort_file_size = 1G
myisam_repair_threads = 1

# Temp Table Settings
tmp_table_size = 32M
max_heap_table_size = 32M

# Group Replication (MySQL 8.0+)
# plugin_load_add = 'group_replication.so'
# group_replication_group_name = "aaaaaaaa-aaaa-aaaa-aaaa-aaaaaaaaaaaa"
# group_replication_start_on_boot = off
# group_replication_local_address = "127.0.0.1:33061"
# group_replication_group_seeds = "127.0.0.1:33061"

[mysql]
# MySQL Client Configuration
default-character-set = utf8mb4
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
# mysqldump Configuration
quick
quote-names
max_allowed_packet = 64M
default-character-set = utf8mb4

[mysql_safe]
# mysql_safe Configuration
socket = /var/run/mysqld/mysqld.sock
nice = 0
log-error = /var/log/mysql/error.log
pid-file = /var/run/mysqld/mysqld.pid

[mysqladmin]
# mysqladmin Configuration
socket = /var/run/mysqld/mysqld.sock

[mysqlcheck]
# mysqlcheck Configuration
socket = /var/run/mysqld/mysqld.sock

[client]
# General Client Configuration
port = 3306
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4
